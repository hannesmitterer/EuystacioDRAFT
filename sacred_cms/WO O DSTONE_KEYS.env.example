# WOODSTONE Sacred Keys Environment Configuration
# Copy this to .env and fill in your sacred keys

# Sacred Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sacred_cms_db
DB_USER=your_db_user
DB_PASS=your_sacred_password

# Authentication Keys
JWT_SECRET=your_sacred_jwt_secret_key_here
AUTH_SALT=your_sacred_salt_for_hashing

# External Sacred Services
HOLY_BRIDGE_API_KEY=your_holy_bridge_api_key
EUYSTACIO_ENDPOINT=https://api.euystacio.sacred
RHYTHM_GUARDIAN_TOKEN=your_rhythm_guardian_access_token

# Sacred CMS Configuration
SACRED_MODE=development
DEBUG_LEVEL=info
CORS_ORIGIN=http://localhost:3000
PORT=8000

# Woodstone Specific
WOODSTONE_SACRED_PATH=/sacred_assets
WOODSTONE_VERIFICATION_KEY=your_woodstone_verification_key
ASTRO_DEEP_AURA_ENABLED=true